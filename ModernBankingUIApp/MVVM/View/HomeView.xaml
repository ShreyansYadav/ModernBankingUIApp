<UserControl x:Class="ModernBankingUIApp.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernBankingUIApp.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#0a0a14">
        <!-- Main scrollable content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Panel.ZIndex="0">
            <ScrollViewer.Resources>
                <!-- Custom scrollbar styling -->
                <Style TargetType="{x:Type ScrollBar}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Width" Value="8"/>
                </Style>
            </ScrollViewer.Resources>

            <StackPanel Margin="25,20,25,30">
                <!-- Modern Header Section -->
                <Grid Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Discover"
                                   Foreground="White"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Left"
                                   FontFamily="/Fonts/#Poppins">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#5bc3ff" 
                                                BlurRadius="20" 
                                                ShadowDepth="0" 
                                                Opacity="0.4"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Explore our premium banking services"
                                   Foreground="#8a8aa8"
                                   FontSize="14"
                                   Margin="0,5,0,0"
                                   FontFamily="/Fonts/#Poppins"/>
                    </StackPanel>

                    <!-- Date/Time Display -->
                    <StackPanel HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <TextBlock Text="Tuesday, Feb 10"
                                   Foreground="#8a8aa8"
                                   FontSize="12"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Poppins"/>
                        <TextBlock Text="2:30 PM"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Poppins"/>
                    </StackPanel>
                </Grid>

                <!-- Featured Cards Section -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,40">

                    <!-- Premium Savings Account Card -->
                    <Border Width="480"
                            Height="240"
                            CornerRadius="25"
                            Cursor="Hand">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#5bc3ff" Offset="0.0"/>
                                <GradientStop Color="#3aa0ff" Offset="0.5"/>
                                <GradientStop Color="#6b68ee" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Border.Effect>
                            <DropShadowEffect Color="#5bc3ff" 
                                            BlurRadius="30" 
                                            ShadowDepth="0" 
                                            Opacity="0.5"/>
                        </Border.Effect>

                        <Grid>
                            <!-- Decorative circles -->
                            <Ellipse Width="200"
                                     Height="200"
                                     Fill="#ffffff15"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Top"
                                     Margin="0,-50,-50,0"/>
                            <Ellipse Width="150"
                                     Height="150"
                                     Fill="#ffffff10"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Bottom"
                                     Margin="-30,0,0,-30"/>

                            <Grid Margin="30,25">
                                <StackPanel VerticalAlignment="Top">
                                    <TextBlock Text="💎 Premium"
                                               Foreground="White"
                                               FontSize="14"
                                               Opacity="0.9"
                                               FontFamily="/Fonts/#Poppins"
                                               Margin="0,0,0,8"/>

                                    <TextBlock Text="Savings Account"
                                               Foreground="White"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               FontFamily="/Fonts/#Poppins"
                                               Margin="0,0,0,5"/>

                                    <TextBlock Text="Earn up to 4.5% APY"
                                               Foreground="White"
                                               FontSize="16"
                                               Opacity="0.95"
                                               FontFamily="/Fonts/#Poppins"
                                               Margin="0,0,0,20"/>

                                    <!-- CTA Button -->
                                    <Border Background="#ffffff25"
                                            CornerRadius="20"
                                            Padding="20,10"
                                            HorizontalAlignment="Left"
                                            Cursor="Hand">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#ffffff35"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="Get Started →"
                                                   Foreground="White"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   FontFamily="/Fonts/#Poppins"/>
                                    </Border>
                                </StackPanel>

                                <!-- Account Image -->
                                <Image Width="180"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,-10,-10"
                                       Source="/Images/Savingaccount-removebg-preview.png" 
                                       Opacity="0.9"
                                       RenderTransformOrigin="0.5,0.5">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            <RotateTransform Angle="-15"/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Student Loans Card -->
                    <Border Width="240"
                            Height="240"
                            CornerRadius="25"
                            Margin="25,0,0,0"
                            Cursor="Hand">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#ffc553" Offset="0.0"/>
                                <GradientStop Color="#ff8a3d" Offset="0.5"/>
                                <GradientStop Color="#ff6b6b" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Border.Effect>
                            <DropShadowEffect Color="#ffc553" 
                                            BlurRadius="25" 
                                            ShadowDepth="0" 
                                            Opacity="0.4"/>
                        </Border.Effect>

                        <Grid>
                            <!-- Decorative elements -->
                            <Ellipse Width="120"
                                     Height="120"
                                     Fill="#ffffff12"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Top"
                                     Margin="0,-30,-30,0"/>

                            <StackPanel Margin="25"
                                        VerticalAlignment="Center">
                                <TextBlock Text="🎓"
                                           FontSize="40"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Student Loans"
                                           Foreground="White"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap"
                                           FontFamily="/Fonts/#Poppins"
                                           Margin="0,0,0,8"/>

                                <TextBlock Text="Flexible repayment options"
                                           Foreground="White"
                                           FontSize="13"
                                           Opacity="0.95"
                                           TextWrapping="Wrap"
                                           FontFamily="/Fonts/#Poppins"
                                           Margin="0,0,0,20"/>

                                <Border Background="#ffffff25"
                                        CornerRadius="15"
                                        Padding="15,8"
                                        HorizontalAlignment="Left"
                                        Cursor="Hand">
                                    <TextBlock Text="Learn More"
                                               Foreground="White"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               FontFamily="/Fonts/#Poppins"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Quick Stats Section -->
                <Grid Margin="0,0,0,35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Stat Card 1 -->
                    <Border Grid.Column="0"
                            Background="#1a1a2e"
                            CornerRadius="18"
                            Padding="20,18"
                            Margin="0,0,10,0"
                            BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#5bc3ff" Opacity="0.2"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <TextBlock Text="📊"
                                       FontSize="24"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="$45,230"
                                       Foreground="White"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       FontFamily="/Fonts/#Poppins"/>
                            <TextBlock Text="Total Balance"
                                       Foreground="#8a8aa8"
                                       FontSize="11"
                                       FontFamily="/Fonts/#Poppins"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Stat Card 2 -->
                    <Border Grid.Column="1"
                            Background="#1a1a2e"
                            CornerRadius="18"
                            Padding="20,18"
                            Margin="0,0,10,0"
                            BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#4eff91" Opacity="0.2"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <TextBlock Text="💰"
                                       FontSize="24"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="+$1,250"
                                       Foreground="#4eff91"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       FontFamily="/Fonts/#Poppins"/>
                            <TextBlock Text="This Month"
                                       Foreground="#8a8aa8"
                                       FontSize="11"
                                       FontFamily="/Fonts/#Poppins"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Stat Card 3 -->
                    <Border Grid.Column="2"
                            Background="#1a1a2e"
                            CornerRadius="18"
                            Padding="20,18"
                            Margin="0,0,10,0"
                            BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#a855f7" Opacity="0.2"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <TextBlock Text="💳"
                                       FontSize="24"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="$890"
                                       Foreground="White"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       FontFamily="/Fonts/#Poppins"/>
                            <TextBlock Text="Spent Today"
                                       Foreground="#8a8aa8"
                                       FontSize="11"
                                       FontFamily="/Fonts/#Poppins"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Stat Card 4 -->
                    <Border Grid.Column="3"
                            Background="#1a1a2e"
                            CornerRadius="18"
                            Padding="20,18"
                            BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#ffc553" Opacity="0.2"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <TextBlock Text="⚡"
                                       FontSize="24"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="12"
                                       Foreground="White"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       FontFamily="/Fonts/#Poppins"/>
                            <TextBlock Text="Transactions"
                                       Foreground="#8a8aa8"
                                       FontSize="11"
                                       FontFamily="/Fonts/#Poppins"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Most Popular Section -->
                <StackPanel Margin="0,0,0,0">
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="Most Popular"
                                   Foreground="White"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Left"
                                   FontFamily="/Fonts/#Poppins"/>

                        <TextBlock Text="View All →"
                                   Foreground="#5bc3ff"
                                   FontSize="13"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Cursor="Hand"
                                   FontFamily="/Fonts/#Poppins"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal">
                        <!-- Service Card 1 - Investments -->
                        <Border Width="180"
                                Height="220"
                                CornerRadius="20"
                                Margin="0,0,20,0"
                                Cursor="Hand">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#844eff" Offset="0.0"/>
                                    <GradientStop Color="#6b3ed9" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#844eff" 
                                                BlurRadius="20" 
                                                ShadowDepth="0" 
                                                Opacity="0.4"/>
                            </Border.Effect>

                            <Grid>
                                <Ellipse Width="100"
                                         Height="100"
                                         Fill="#ffffff10"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Margin="0,-30,-30,0"/>

                                <StackPanel Margin="20"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="📈"
                                               FontSize="48"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,15"/>
                                    <TextBlock Text="Investments"
                                               Foreground="White"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               FontFamily="/Fonts/#Poppins"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Grow your wealth"
                                               Foreground="White"
                                               FontSize="12"
                                               Opacity="0.9"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               FontFamily="/Fonts/#Poppins"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Service Card 2 - Insurance -->
                        <Border Width="180"
                                Height="220"
                                CornerRadius="20"
                                Margin="0,0,20,0"
                                Cursor="Hand">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#4e99ff" Offset="0.0"/>
                                    <GradientStop Color="#3a7ed9" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#4e99ff" 
                                                BlurRadius="20" 
                                                ShadowDepth="0" 
                                                Opacity="0.4"/>
                            </Border.Effect>

                            <Grid>
                                <Ellipse Width="100"
                                         Height="100"
                                         Fill="#ffffff10"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Margin="0,-30,-30,0"/>

                                <StackPanel Margin="20"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="🛡️"
                                               FontSize="48"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,15"/>
                                    <TextBlock Text="Insurance"
                                               Foreground="White"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               FontFamily="/Fonts/#Poppins"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Protect what matters"
                                               Foreground="White"
                                               FontSize="12"
                                               Opacity="0.9"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               FontFamily="/Fonts/#Poppins"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Service Card 3 - Credit Cards -->
                        <Border Width="180"
                                Height="220"
                                CornerRadius="20"
                                Margin="0,0,20,0"
                                Cursor="Hand">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#4eff91" Offset="0.0"/>
                                    <GradientStop Color="#3dd977" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#4eff91" 
                                                BlurRadius="20" 
                                                ShadowDepth="0" 
                                                Opacity="0.4"/>
                            </Border.Effect>

                            <Grid>
                                <Ellipse Width="100"
                                         Height="100"
                                         Fill="#ffffff10"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Margin="0,-30,-30,0"/>

                                <StackPanel Margin="20"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="💳"
                                               FontSize="48"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,15"/>
                                    <TextBlock Text="Credit Cards"
                                               Foreground="White"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               FontFamily="/Fonts/#Poppins"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Rewards &amp; cashback"
                                               Foreground="White"
                                               FontSize="12"
                                               Opacity="0.9"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               FontFamily="/Fonts/#Poppins"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Floating Chat Button (Redesigned) -->
                        <Border Width="70"
                                Height="70"
                                CornerRadius="35"
                                VerticalAlignment="Bottom"
                                Margin="20,0,0,0"
                                Cursor="Hand">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#5bc3ff" Offset="0.0"/>
                                    <GradientStop Color="#a855f7" Offset="0.5"/>
                                    <GradientStop Color="#3aa0ff" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#5bc3ff" 
                                                BlurRadius="25" 
                                                ShadowDepth="0" 
                                                Opacity="0.7"/>
                            </Border.Effect>

                            <Button Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="ChatButton_Click"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="35">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="💬"
                                               FontSize="30"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,2"/>
                                    <TextBlock Text="Chat"
                                               Foreground="White"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               FontFamily="/Fonts/#Poppins"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Ultra Modern Chatbox overlay -->
        <Border x:Name="ChatBox"
                Width="340"
                Height="500"
                CornerRadius="25"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Visibility="Collapsed"
                Panel.ZIndex="999">

            <Border.Background>
                <SolidColorBrush Color="#1a1a2e" Opacity="0.95"/>
            </Border.Background>

            <Border.Effect>
                <DropShadowEffect Color="#5bc3ff" 
                                  BlurRadius="40" 
                                  ShadowDepth="0" 
                                  Opacity="0.6"/>
            </Border.Effect>

            <Border BorderThickness="2"
                    CornerRadius="25">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#5bc3ff" Offset="0.0"/>
                        <GradientStop Color="#a855f7" Offset="0.5"/>
                        <GradientStop Color="#3aa0ff" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>

                    <!-- Ultra Modern Header -->
                    <Border Grid.Row="0"
                            CornerRadius="25,25,0,0"
                            Padding="20,15">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#5bc3ff" Offset="0.0"/>
                                <GradientStop Color="#7b68ee" Offset="0.5"/>
                                <GradientStop Color="#3aa0ff" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <Border Width="45"
                                        Height="45"
                                        CornerRadius="23"
                                        Margin="0,0,12,0">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#ffffff" Offset="0"/>
                                            <GradientStop Color="#e0e7ff" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>

                                    <Grid>
                                        <TextBlock Text="🤖"
                                                   FontSize="24"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>

                                        <Ellipse Width="12"
                                                 Height="12"
                                                 Fill="#4eff91"
                                                 HorizontalAlignment="Right"
                                                 VerticalAlignment="Bottom"
                                                 Margin="0,0,2,2">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="#4eff91" 
                                                                BlurRadius="8" 
                                                                ShadowDepth="0" 
                                                                Opacity="0.8"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                    </Grid>
                                </Border>

                                <StackPanel>
                                    <TextBlock Text="AI Assistant"
                                               Foreground="White"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               FontFamily="/Fonts/#Poppins"/>
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,2,0,0">
                                        <Ellipse Width="6"
                                                 Height="6"
                                                 Fill="#4eff91"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,6,0"/>
                                        <TextBlock Text="Active now"
                                                   Foreground="White"
                                                   FontSize="12"
                                                   Opacity="0.9"
                                                   FontFamily="/Fonts/#Poppins"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <Border Width="40"
                                    Height="40"
                                    CornerRadius="20"
                                    Background="#ffffff20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Cursor="Hand">
                                <Button Content="✕"
                                        Width="40"
                                        Height="40"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Foreground="White"
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Click="CloseChatButton_Click"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="20">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#ffffff40"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Messages Area -->
                    <Border Grid.Row="1"
                            Background="#0f0f1e"
                            Margin="0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      Margin="20,20,20,15">
                            <StackPanel x:Name="ChatMessagesPanel">
                                <Border Background="#1e1e3a"
                                        CornerRadius="20,20,20,4"
                                        Padding="16,12"
                                        MaxWidth="260"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,15">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#5bc3ff" 
                                                        BlurRadius="20" 
                                                        ShadowDepth="0" 
                                                        Opacity="0.3"/>
                                    </Border.Effect>

                                    <StackPanel>
                                        <TextBlock Text="👋 Hello! I'm your AI assistant."
                                                   Foreground="White"
                                                   FontSize="14"
                                                   FontFamily="/Fonts/#Poppins"
                                                   TextWrapping="Wrap"
                                                   LineHeight="20"/>
                                        <TextBlock Text="How can I help you today?"
                                                   Foreground="#b8b8d4"
                                                   FontSize="14"
                                                   FontFamily="/Fonts/#Poppins"
                                                   TextWrapping="Wrap"
                                                   LineHeight="20"
                                                   Margin="0,6,0,0"/>
                                        <TextBlock Text="Just now"
                                                   Foreground="#6b6b8f"
                                                   FontSize="10"
                                                   FontFamily="/Fonts/#Poppins"
                                                   Margin="0,8,0,0"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>

                                <StackPanel Orientation="Horizontal"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Left">
                                    <Border Background="#ffffff10"
                                            BorderBrush="#5bc3ff"
                                            BorderThickness="1"
                                            CornerRadius="15"
                                            Padding="12,8"
                                            Margin="0,0,8,0"
                                            Cursor="Hand">
                                        <TextBlock Text="💳 Balance"
                                                   Foreground="#5bc3ff"
                                                   FontSize="12"
                                                   FontFamily="/Fonts/#Poppins"/>
                                    </Border>

                                    <Border Background="#ffffff10"
                                            BorderBrush="#a855f7"
                                            BorderThickness="1"
                                            CornerRadius="15"
                                            Padding="12,8"
                                            Cursor="Hand">
                                        <TextBlock Text="📊 Statements"
                                                   Foreground="#a855f7"
                                                   FontSize="12"
                                                   FontFamily="/Fonts/#Poppins"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Input Area -->
                    <Border Grid.Row="2"
                            Background="#1a1a2e"
                            CornerRadius="0,0,25,25"
                            Padding="20,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Width="45"
                                    Height="45"
                                    CornerRadius="23"
                                    Background="#ffffff08"
                                    Margin="0,0,10,0"
                                    Cursor="Hand">
                                <Button Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <TextBlock Text="📎"
                                               FontSize="20"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Button>
                            </Border>

                            <Border Grid.Column="1"
                                    Background="#0f0f1e"
                                    CornerRadius="23"
                                    BorderThickness="1">
                                <Border.BorderBrush>
                                    <SolidColorBrush Color="#5bc3ff" Opacity="0.3"/>
                                </Border.BorderBrush>

                                <Grid>
                                    <TextBox x:Name="ChatInputTextBox"
                                             Background="Transparent"
                                             Foreground="White"
                                             BorderThickness="0"
                                             FontSize="14"
                                             FontFamily="/Fonts/#Poppins"
                                             Padding="18,12"
                                             VerticalContentAlignment="Center"
                                             Text="Type your message..."
                                             CaretBrush="#5bc3ff">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="23">
                                                                <ScrollViewer x:Name="PART_ContentHost"
                                                                            Margin="0"
                                                                            VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>

                                    <Button HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Width="35"
                                            Height="35"
                                            Margin="0,0,8,0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand">
                                        <TextBlock Text="😊"
                                                   FontSize="18"
                                                   Opacity="0.6"/>
                                    </Button>
                                </Grid>
                            </Border>

                            <Border Grid.Column="2"
                                    Width="50"
                                    Height="50"
                                    CornerRadius="25"
                                    Margin="10,0,0,0"
                                    Cursor="Hand">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#5bc3ff" Offset="0.0"/>
                                        <GradientStop Color="#a855f7" Offset="0.5"/>
                                        <GradientStop Color="#3aa0ff" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#5bc3ff" 
                                                    BlurRadius="20" 
                                                    ShadowDepth="0" 
                                                    Opacity="0.8"/>
                                </Border.Effect>

                                <Button Background="Transparent"
                                        BorderThickness="0"
                                        Click="SendMessageButton_Click"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="25">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>

                                    <Path Data="M2,2 L18,10 L2,18 L2,2 Z"
                                          Fill="White"
                                          Stretch="Uniform"
                                          Width="18"
                                          Height="18"
                                          RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <RotateTransform Angle="0"/>
                                        </Path.RenderTransform>
                                    </Path>
                                </Button>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>