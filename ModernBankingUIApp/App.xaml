<Application x:Class="ModernBankingUIApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ModernBankingUIApp.MVVM.ViewModel"
             xmlns:views="clr-namespace:ModernBankingUIApp.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/TextboxTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Map view-models to Views so ContentControl shows the right UserControl -->
            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:DiscoveryViewModel}">
                <views:DiscoveryView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
